apiVersion: v1
kind: Config
current-context: {{ friendly_cluster_name }}
contexts:
- name: {{ friendly_cluster_name }}
  context:
    cluster: {{ friendly_cluster_name }}
    user: {{ user_name }} 
clusters:
- name: {{ friendly_cluster_name }}
  cluster:
    certificate-authority-data: {{ cluster_ca_cert }}
    server: {{ cluster_endpoint }}
users:
- name: {{ user_name }}
  user:
    token: {{ sa_secret_token }}